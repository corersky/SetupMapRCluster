#!/bin/sh

HS=""
if [ -e /opt/mapr/roles/historyserver ]; then
	HS="-HS `hostname`"
fi

sudo /opt/mapr/server/configure.sh --isvm \
   -N <%= $mapr_pre::cluster_name %> \
   -C <%= $mapr_pre::cldb_node_list %> \
   -Z <%= $mapr_pre::zk_node_list %> \
   -no-autostart -D <%= $mapr_pre::disk_list %> \
   $HS \
   -f
